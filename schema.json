{
  "type": "object",
  "properties": {
    "domain": {
      "type": "object",
      "description": "The specific area of expertise or subject matter that a software system is designed to support",
      "properties": {
        "name": {
          "type": "string",
          "title": "High-level domain name"
        },
        "description": {
          "type": "string",
          "title": "Short domain description"
        },
        "actors": {
          "type": "object",
          "title": "Actors",
          "description": "A person, system, or device that interacts with a software system in some way",
          "patternProperties": {
            "[a-z-]+": {
              "type": "object",
              "properties": {
                "name": {
                  "type": "string"
                },
                "description": {
                  "type": "string"
                },
                "relations": {
                  "type": "array",
                  "title": "Actor's relations",
                  "items": {
                    "type": "string"
                  }
                }
              },
              "required": ["name", "description"]
            }
          }
        },
        "systems": {
          "type": "object",
          "title": "Software systems within domain",
          "description": "Applications or services that bring value to the end users",
          "patternProperties": {
            "[a-z-]+": {
              "type": "object",
              "properties": {
                "name": {
                  "type": "string"
                },
                "description": {
                  "type": "string"
                },
                "containers": {
                  "type": "object",
                  "title": "Containers",
                  "description": "Units of a system that can usually be deployed independently",
                  "patternProperties": {
                    "[a-z-]+": {
                      "type": "object",
                      "properties": {
                        "name": {
                          "type": "string"
                        },
                        "description": {
                          "type": "string"
                        },
                        "relations": {
                          "type": "array",
                          "title": "Container relations",
                          "items": {
                            "type": "string"
                          }
                        },
                        "components": {
                          "type": "object",
                          "title": "Component",
                          "description": "Buildable packages that are usually represented as artifacts in the file system",
                          "patternProperties": {
                            "[a-z-]+": {
                              "type": "object",
                              "properties": {
                                "name": {
                                  "type": "string"
                                },
                                "description": {
                                  "type": "string"
                                },
                                "relations": {
                                  "type": "array",
                                  "title": "Component relations",
                                  "items": {
                                    "type": "string"
                                  }
                                }
                              },
                              "required": ["name", "description"]
                            }
                          }
                        }
                      },
                      "required": ["name", "description"]
                    }
                  }
                }
              },
              "required": ["name", "description"]
            }
          }
        }
      },
      "required": ["name", "description", "actors", "systems"]
    },
    "views": {
      "type": "object",
      "patternProperties": {
        "[a-z-]+": {
          "type": "object",
          "properties": {
            "elements": {
              "type": "object",
              "patternProperties": {
                "[a-z-]+": {
                  "type": "object",
                  "properties": {
                    "x": {
                      "type": "number"
                    },
                    "y": {
                      "type": "number"
                    },
                    "relations": {
                      "type": "object",
                      "patternProperties": {
                        "[a-z-\\d\\s]+": {
                          "type": "array",
                          "items": {
                            "type": "object",
                            "properties": {
                              "x": {
                                "type": "number"
                              },
                              "y": {
                                "type": "number"
                              }
                            },
                            "required": ["x", "y"]
                          }
                        }
                      }
                    }
                  },
                  "required": ["x", "y"]
                }
              }
            }
          }
        }
      }
    }
  }
}
