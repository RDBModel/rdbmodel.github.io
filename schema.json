{
  "type": "object",
  "properties": {
    "domain": {
      "type": "object",
      "description": "The specific area of expertise or subject matter that a software system is designed to support",
      "properties": {
        "name": {
          "type": "string",
          "title": "High-level domain name"
        },
        "description": {
          "type": "string",
          "title": "Purpose of this yaml file"
        },
        "actors": {
          "type": "object",
          "patternProperties": {
            "[a-z-]+": {
              "title": "Actor",
              "description": "A person, system, or device that interacts with a software system in some way",
              "type": "object",
              "properties": {
                "name": {
                  "type": "string"
                },
                "description": {
                  "type": "string"
                },
                "relations": {
                  "type": "array",
                  "title": "Relations to other actors/systems/containers/components",
                  "items": {
                    "type": "string"
                  }
                }
              },
              "required": ["name", "description"],
              "additionalProperties": false
            }
          }
        },
        "systems": {
          "type": "object",
          "patternProperties": {
            "[a-z-]+": {
              "type": "object",
              "title": "Software system within domain",
              "description": "Application or service that bring value to the end users",
              "properties": {
                "name": {
                  "type": "string"
                },
                "description": {
                  "type": "string"
                },
                "containers": {
                  "type": "object",
                  "patternProperties": {
                    "[a-z-]+": {
                      "type": "object",
                      "title": "Container",
                      "description": "Unit of a system that can usually be deployed independently",
                      "properties": {
                        "name": {
                          "type": "string"
                        },
                        "description": {
                          "type": "string"
                        },
                        "relations": {
                          "type": "array",
                          "description": "Relations to other actors/systems/containers/components",
                          "items": {
                            "type": "string"
                          }
                        },
                        "components": {
                          "type": "object",
                          "patternProperties": {
                            "[a-z-]+": {
                              "title": "Component",
                              "description": "Buildable package that are usually represented as artifact in the file system",
                              "type": "object",
                              "properties": {
                                "name": {
                                  "type": "string"
                                },
                                "description": {
                                  "type": "string"
                                },
                                "relations": {
                                  "type": "array",
                                  "description": "Relations to other actors/systems/containers/components",
                                  "items": {
                                    "type": "string"
                                  }
                                }
                              },
                              "required": ["name", "description"],
                              "additionalProperties": false
                            }
                          }
                        }
                      },
                      "required": ["name", "description"]
                    }
                  }
                },
                "relations": {
                  "type": "array",
                  "description": "Relations to other actors/systems/containers/components",
                  "items": {
                    "type": "string"
                  }
                }
              },
              "required": ["name", "description"],
              "additionalProperties": false
            }
          }
        }
      },
      "required": ["name", "description", "actors", "systems"],
      "additionalProperties": false
    },
    "views": {
      "type": "object",
      "patternProperties": {
        "[a-z-]+": {
          "type": "object",
          "properties": {
            "elements": {
              "type": "object",
              "patternProperties": {
                "[a-z-]+": {
                  "type": "object",
                  "properties": {
                    "x": {
                      "type": "number"
                    },
                    "y": {
                      "type": "number"
                    },
                    "relations": {
                      "type": "object",
                      "patternProperties": {
                        "[a-z-\\d\\s]+": {
                          "type": "array",
                          "items": {
                            "type": "object",
                            "properties": {
                              "x": {
                                "type": "number"
                              },
                              "y": {
                                "type": "number"
                              }
                            },
                            "required": ["x", "y"],
                            "additionalProperties": false
                          }
                        }
                      }
                    }
                  },
                  "required": ["x", "y"],
                  "additionalProperties": false
                }
              }
            }
          },
          "additionalProperties": false
        }
      }
    },
    "additionalProperties": false
  }
}
